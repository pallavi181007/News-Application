<div class="news-container"  >
  <div class="news" >
      <% articles.forEach(function(article,index){ %>
        <% if ((typeof article.url=='object') || (typeof article.title=='object') || (typeof article.urlToImage=='object') || (typeof article.content=='object')){ %>
          <% } else{ %>
            <a href="<%- article.url %>" target="_blank" class="news-box Hover-effect">
              <img src="<%- article.urlToImage %>" alt="Image"> 
              <h3 style="color:white">
                <%- article.title %>
              </h3>
              <p style="color: white;">
                <%- article.content.replace(/<[^>]+>/g, '') %>
              </p>
              <br>
              <Button href="<%- article.url %> "target="_blank" style=" background-color:#005abb;border-radius: 12px;font-weight:bold; color: #fff; box-Shadow: 0 30px 36px 0 rgba(0, 0, 0, 0.2)"">Read more â†’</Button>

              <p style="margin-bottom: 0px; position: absolute; right: 0; bottom: 0; font-family: ui-monospace;"> <span style="color:white;" >
                <%- new Date(article.publishedAt.slice(0,10)).toDateString() %>  
                  <%- moment.utc(article.publishedAt).local().format('hh : mm A') %> </span></p>
            </a>
          <% } %>
        <% }) %>
      </div>
  </div>

  <div class="pagination">
    <% if (pages > 0) { %>
      
          <% if (current === 1) { %>
              <a>First</a>
          <% } else { %>
              <a href="/dashboard/home/1">First</a>
          <% } %>
          <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
          <% if (i !== 1) { %>
              <a>...</a>
          <% } %>
          <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
              <% if (i === current) { %>
                  <a><%= i %></a>
              <% } else { %>
                  <a href="/dashboard/home/<%= i %>"><%= i %></a>
              <% } %>
              <% if (i === Number(current) + 4 && i < pages) { %>
                  <a>...</a>
              <% } %>
          <% } %>
          <% if (current === pages) { %>
              <a>Last</a>
          <% } else { %>
              <a href="/dashboard/home/<%= pages %>">Last</a>
          <% } %>
      
    <% } %>
    </div>

